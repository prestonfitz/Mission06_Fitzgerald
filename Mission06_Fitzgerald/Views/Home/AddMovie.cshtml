@{
    ViewData["Title"] = "Add to the collection";
}

@model NewMovie
<h1>Add a Movie</h1>
<p>This is your chance to add to the legendary Joel Hilton Movie Collection! So don't screw it up. </p>
<form method="post">
    <input asp-for="MovieID" type="hidden" />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required /><br />
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId">
        <option value="">Select a category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }

    </select><br />
    @*     <input asp-for="Category" required /><br /> *@
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required /><br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required /><br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
    </select><br />
    <label asp-for="Edited">Edited:</label>
    <input type="radio" name="Edited" asp-for="Edited" value="false" checked />No
    <input type="radio" name="Edited" asp-for="Edited" value="true" />Yes<br />
    <label asp-for="LentTo">Lent to:</label>
    <input asp-for="LentTo" /><br />
    <label asp-for="CopiedToPlex">Copied to Plex</label>
    <input type="radio" name="CopiedToPlex" asp-for="CopiedToPlex" value="false" checked />No
    <input type="radio" name="CopiedToPlex" asp-for="CopiedToPlex" value="true" />Yes <br />
    <label asp-for="Notes">Notes:</label>
    <input maxlength="25" asp-for="Notes" /><br />
    <br />
    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>
</form>